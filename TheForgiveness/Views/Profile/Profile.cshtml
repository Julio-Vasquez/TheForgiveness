@model TheForgiveness.Models.PerfilModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "~/../../Assets/Css/Profile/profile.css";
    ViewBag.Js = "";
}



<div class="bg-img-traslucida">
    <div class="banner row">

        <div class="col-md-6 col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 cont-right">
            <h1>Hola !</h1>
            <h6>@Html.DisplayFor(model => model.PriNombre) @Html.DisplayFor(model => model.PriApellido)</h6>
            <ul class="address">
               <h3>Tus Datos</h3>
                <li>
                    <ul class="address-text">
                        <li><b>@Html.DisplayNameFor(model => model.NumIdentificacion)</b></li>
                        <li> @Html.DisplayFor(model => model.NumIdentificacion)</li>
                    </ul>
                </li>
                <li>
                    <ul class="address-text">
                        <li><b>@Html.DisplayNameFor(model => model.PriNombre)</b></li>
                        <li>@Html.DisplayFor(model => model.PriNombre)</li>
                    </ul>
                </li>
                <li>
                    <ul class="address-text">
                        <li><b>@Html.DisplayNameFor(model => model.SegNombre)</b></li>
                        <li>@Html.DisplayFor(model => model.SegNombre)</li>
                    </ul>
                </li>
                <li>
                    <ul class="address-text">
                        <li><b>@Html.DisplayNameFor(model => model.PriApellido)</b></li>
                        <li>@Html.DisplayFor(model => model.PriApellido)</li>
                    </ul>
                </li>
                <li>
                    <ul class="address-text">
                        <li><b>@Html.DisplayNameFor(model => model.SegApellido)</b></li>
                        <li> @Html.DisplayFor(model => model.SegApellido)</li>
                    </ul>
                </li>
                <li>
                    <ul class="address-text">
                        <li><b> @Html.DisplayNameFor(model => model.FechaNacimiento)</b></li>
                        <li>@Html.DisplayFor(model => model.FechaNacimiento)</li>
                    </ul>
                </li>
                <li>
                    <ul class="address-text">
                        <li><b>@Html.DisplayNameFor(model => model.Edad)</b></li>
                        <li> @Html.DisplayFor(model => model.Edad)</li>
                    </ul>
                </li>
                <li>
                    <ul class="address-text">
                        <li><b>Genero</b></li>
                        <li>@Html.Raw(ViewData["genero"])</li>
                    </ul>
                </li>
                <li>
                    <ul class="address-text">
                        <li><b>TipoDocumento</b></li>
                        <li>@Html.Raw(ViewData["documento"])</li>
                    </ul>
                </li>
                <li>
                    <ul class="address-text">
                        <li><b>Municipio</b></li>
                        <li>@Html.Raw(ViewData["municipio"])</li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="col-md-6 header-left">
            @{
                if (ViewData["genero"].Equals("Femenino"))
                {
                    <img src="https://i.pinimg.com/564x/d1/ad/13/d1ad13605acd060cbcc4b334e2119883.jpg" alt="" id="imgprofilemujer">
                }
                else
                {
                    <img src="https://i.pinimg.com/564x/e1/77/47/e17747c78dd89a1d9522c5da154128b2.jpg" alt="" id="imgprofilehombre">
                }
            }
        </div>
        <div class="clearfix"></div>
    </div>
</div>

