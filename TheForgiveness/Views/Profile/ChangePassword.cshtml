@model TheForgiveness.Models.PasswordModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "~/../../Assets/Css/Profile/ChangePassword.css";
}


    <div class="Contenido">
        <h2>Aqui puedes modificar tu contraseña</h2>
        @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @accept_charset = "utf-8" }))
        {
            @Html.AntiForgeryToken()

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="aju form-group ">
                <label class="control-label col-md-offset-3 col-md-3">Contrase;a Antigua:</label>
                <div class="col-md-offset-3 col-md-6" >
                    <input type="password" name="name" value="*************" disabled class="form-control text-box single-line password" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PassWord, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.RepeatPassWord, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RepeatPassWord, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-4">
                    <input type="submit" value="Cambiar contraseña" class="btn btn-success" />
                </div>
            </div>


        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>



