@model IEnumerable<TheForgiveness.Models.subcategoiaModel>

@{
    ViewBag.Title = "GetSubcategory";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "../Assets/Css/Subject/create.min.css";
}

    <script>
    $(document).ready(function () {
        $('#sub').DataTable();
    });
    </script>
<h1>Listado de SubCategorias</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="sub">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Explicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Victimologia)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (ViewBag.rol == "Administrador")
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Explicacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Victimologia)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "UpdateMunicipality", new { id = item.ID }, new { @class = "btn btn-outline-warning" })
                            @Html.ActionLink("Details", "SpecifyMunicipality", new { id = item.ID }, new { @class = "btn btn-outline-success" })
                            @Html.ActionLink("Delete", "DeleteMunicipality", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>
                }
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Explicacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Victimologia)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "SpecifyMunicipality", new { id = item.ID }, new { @class = "btn btn-outline-success" })
                            
                        </td>
                    </tr>
                }
            }
        }
    </tbody>


</table>
