@model IEnumerable<TheForgiveness.Models.conceptoautoresModel>

@{
    ViewBag.Title = "GetConcepts";
    Layout = "~/Views/Shared/DashBoard.cshtml";
}

<h2>GetConcept</h2>

<p>
    @Html.ActionLink("Create New", "CreateConcept")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AñoPublicacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AñoPublicacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateConcept", new { id=item.ID }) |
            @Html.ActionLink("Details", "SpecifyConcept", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteConcept", new { id=item.ID })
        </td>
    </tr>
}

</table>
