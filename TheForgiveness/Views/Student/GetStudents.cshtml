@model  IEnumerable<TheForgiveness.Models.studentModel>

@{
    ViewBag.Title = "GetStudent";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "../Assets/Css/Subject/create.min.css";
}
    <script>
    $(document).ready(function () {
        $('#stud').DataTable();
    });
    </script>

<h1>Listado de Estudiantes</h1>

<p>
    @Html.ActionLink("Crear Estudiante", "CreateStudent")
</p>
<table class="table" id="stud">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumIdentificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (ViewBag.rol == "Docente" || ViewBag.rol == "Administrador")
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumIdentificacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SegNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PriApellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SegApellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaNacimiento)
                        </td>
                        <td>
                            @Html.Raw(ViewData["genero"])
                        </td>
                        <td>
                            @Html.Raw(ViewData["municipio"])
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {  id=item.NumIdentificacion }, new { @class = "btn btn-outline-warning" })
                            @Html.ActionLink("Details", "SpecifyStudent", new {  id=item.NumIdentificacion }, new { @class = "btn btn-outline-success" })
                            @Html.ActionLink("Delete", "Delete", new {  id=item.NumIdentificacion }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>

                    }

                }
            }
    </tbody>


</table>
