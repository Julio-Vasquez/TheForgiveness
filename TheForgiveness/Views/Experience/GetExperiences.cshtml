@model IEnumerable<TheForgiveness.Models.experienciaModel>

@{
    ViewBag.Title = "GetExperiences";
    Layout = "~/Views/Shared/DashBoard.cshtml";
}

<h2>GetExperiences</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FechaExperiencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experiencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Municipio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FechaExperiencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Experiencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Municipio)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
