@model TheForgiveness.Models.MyHistoryModel

@{
    ViewBag.Title = "Registrar Experiencia";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "../Assets/Css/Experience/create.css";
    ViewBag.Js = "../Assets/Js/Experience/myhistory.js";
}

<div class="midiv" style=" background-image:url(../../Assets/Img/Experience/Experience.jpg);background-size:cover;">

    <h1>Crea tu historia</h1>
    <hr />

    @using (Html.BeginForm("CreateExperience", "Experience", FormMethod.Post, new { @id = "btnExperience" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-row col-11 offset-1">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group col-4">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
                <br />
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @rows = "5", cols = "9" })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-4">
                @Html.LabelFor(model => model.ConceptoInicial, htmlAttributes: new { @class = "control-label" })
                <br />
                @Html.TextAreaFor(model => model.ConceptoInicial, new { @class = "form-control", @rows = "5", cols = "10" })
                @Html.ValidationMessageFor(model => model.ConceptoInicial, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-3 ulli">
                <label class="control-label">Donde Ocurrio:</label>
                <ul>
                    <li>
                        <input type="checkbox" id="cb-finca" name="group1[]" />
                        <label for="cb-finca">
                            <img src="https://i.ytimg.com/vi/_6nx1WJnz3M/maxresdefault.jpg" class="imgApp"
                                 alt="Todo ocurrio en la finca," />
                        </label>
                    </li>
                    <li>
                        <input type="checkbox" id="cb-ciudad" name="group1[]" />
                        <label for="cb-ciudad">
                            <img src="https://e00-elmundo.uecdn.es/assets/multimedia/imagenes/2018/10/01/15383924054445.jpg" class="imgApp"
                                 alt="Todo ocurrio en la ciudad," />
                        </label>
                    </li>
                </ul>

            </div>


            <div class="form-group">
                @Html.Hidden("Experiencia")
            </div>

            <div class="form-group col-3">
                <label class="control-label">Departamento</label>
                <select name="Departamento" class="form-control" onchange="cargar(this.value)">
                    <option value="default"></option>
                    @foreach (System.Data.DataRow row in ViewBag.departamento.Rows)
                    {
                        <option value=@row["ID"]>@row["Departamento"]</option>
                    }
                </select>
            </div>

            <div class="form-group col-3">
                <label class="control-label">Municipio</label>
                <select name="Municipio" class="form-control " id="Municipio">
                    <option value="default"></option>
                </select>
            </div>
            <div class="form-group col-2">
                @Html.LabelFor(model => model.TiempoExperiencia, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TiempoExperiencia, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sucedio hace ..." } })
                @Html.ValidationMessageFor(model => model.TiempoExperiencia, "", new { @class = "text-danger" })
            </div>
            <div class="history ulli col-12">
                <fieldset>
                    <legend>Actor</legend>
                    <ul>
                        <li>
                            <input type="checkbox" id="cb-el" name="group2[]" />
                            <label for="cb-el">
                                <img src="https://image.freepik.com/vector-gratis/nino-dibujos-animados-jugando-al-futbol_33070-2264.jpg" class="actor"
                                     alt="El joven" />
                            </label>
                        </li>
                        <li>
                            <input type="checkbox" id="cb-ella" name="group2[]"/>
                            <label for="cb-ella">
                                <img src="https://image.freepik.com/vector-gratis/dibujos-animados-cuerpo-nina-linda_18591-41519.jpg" class="actor"
                                     alt="La joven" />
                            </label>
                        </li>
                        <li>
                            <input type="checkbox" id="cb-senor" name="group2[]"/>
                            <label for="cb-senor">
                                <img src="https://cdn.clipart.email/be3d25848ae6353eeb78af1a3d4431aa_office-man-clipart-png-clipartxtras_456-429.jpeg" class="actor"
                                     alt="El señor" />
                            </label>
                        </li>
                        <li>
                            <input type="checkbox" id="cb-senora" name="group2[]"/>
                            <label for="cb-senora">
                                <img src="https://i.pinimg.com/originals/68/df/50/68df50cc730910d44a236c0d7430686d.png" class="actor"
                                     alt="La señora" />
                            </label>
                        </li>
                        <li>
                            <input type="checkbox" id="cb-abuelo" name="group2[]"/>
                            <label for="cb-abuelo">
                                <img src="https://i.pinimg.com/originals/98/10/4f/98104f5e5c17cbd7a5aa735c2677f99d.png" class="actor"
                                     alt="El abuelo" />
                            </label>
                        </li>
                        <li>
                            <input type="checkbox" id="cb-abuela" name="group2[]"/>
                            <label for="cb-abuela">
                                <img src="https://image.freepik.com/vector-gratis/personaje-dibujos-animados-anciana-nina-edad-abuela-sonriendo-lava-plato_101266-138.jpg" class="actor"
