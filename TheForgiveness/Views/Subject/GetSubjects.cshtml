@model IEnumerable<TheForgiveness.Models.asignaturaModel>

@{
    ViewBag.Title = "GetSubjects";
    Layout = "~/Views/Shared/DashBoard.cshtml";
}

<h2>GetSubjects</h2>

<p>
    @Html.ActionLink("Create New", "CreateSubject")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateSubject", new { id=item.ID }) |
            @Html.ActionLink("Details", "SpecifySubject", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteSubject", new { id=item.ID })
        </td>
    </tr>
}

</table>
