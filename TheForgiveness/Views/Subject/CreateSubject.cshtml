@model TheForgiveness.Models.asignaturaModel

@{
    ViewBag.Style = "../Assets/Css/Subject/create.min.css";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "../Assets/Css/Subject/create.min.css";
}

@using (Html.BeginForm("CreateSubject","Subject",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h1>Crear Nueva Asignatura</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-3 offset-md-4" })
            <div class="col-md-4 offset-md-4">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="offset-md-5 col-md-2">
                <input type="submit" value="Crear Nueva Asignatura" class="mybtn btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div class="back">
    @Html.ActionLink("Back to List", "GetSubjects", null, new { @class = "back-link" })
</div>
