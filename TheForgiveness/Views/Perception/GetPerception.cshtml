@model IEnumerable<TheForgiveness.Models.percepcionPostconfictoModel>

@{
    ViewBag.Title = "GetPerception";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "../Assets/Css/Subject/create.min.css";
}

<script>
    $(document).ready(function () {
        $('#for').DataTable();
    });
</script>

<h1>Listado de Percepcion</h1>
<hr />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="for">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (ViewBag.rol == "Docente")
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-warning" }) |
                            @Html.ActionLink("Details", "SpecifyPerception", new { id = item.ID }, new { @class = "btn btn-outline-success" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>
                }
            }
        </tbody>
</table>
