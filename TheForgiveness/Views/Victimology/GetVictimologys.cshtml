@model IEnumerable<TheForgiveness.Models.VictimologyModel>

@{
    ViewBag.Title = "Listado Victimologias";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "../Assets/Css/Subject/create.min.css";
}

<h1>Listado de Victimologias</h1>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

<script>
    $(document).ready(function () {
        $('#vic').DataTable();
    });
</script>
<table class="table" id="vic">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>Accioness a aplicar</th>
        </tr>
    </thead>
    <tbody>
        @{
            if (ViewBag.rol == "Administrador")
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "UpdateVictimology", new { id = item.ID }, new { @class = "btn btn-outline-warning" })
                            @Html.ActionLink("Detalle", "SpecifyVictimologys", new { id = item.ID }, new { @class = "btn btn-outline-success" })
                            @Html.ActionLink("Eliminar", "DeleteVictimology", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>
                }

            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>

                            @Html.ActionLink("Detalle", "SpecifyVictimologys", new { id = item.ID }, new { @class = "btn btn-outline-success" })
                            <button class="btn btn-circle">Escuchar</button>
                            <button class="btn btn-circle">Video</button>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
