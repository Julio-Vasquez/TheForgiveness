@model IEnumerable<TheForgiveness.Models.departamentoModel>

@{
    ViewBag.Title = "GetDepartment";
    Layout = "~/Views/Shared/DashBoard.cshtml";
}

<h2>GetDepartment</h2>

<p>
    @Html.ActionLink("Create New", "CreateDepartment")
</p>
<table class="table">
    <tr>
        <th>
            Indice
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Departamento)
    </td>

    <td>
        @Html.ActionLink("Update", "UpdateDepartment", new { id = item.ID }) |
        @Html.ActionLink("Details", "SpecifyDepartment", new { id = item.ID }) |
        @Html.ActionLink("Delete", "DeleteDepartment", new { id = item.ID })
    </td>
</tr>
}

</table>
