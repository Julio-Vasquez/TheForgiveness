@model TheForgiveness.Models.DepartmentModel

@{
    ViewBag.Title = "Eliminar Departamento";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "../../Assets/Css/Subject/create.min.css";
    ViewBag.Js = "../../Assets/Js/Delete/sweet.js";
}

<h1>Eliminar Departamento</h1>

<h3 class="text-center">Esta seguro que desea eliminar esto?</h3>
<hr />
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departamento)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pais)
        </dt>

        <dd>
            Colombia
        </dd>

    </dl>
    <hr />
    @using (Html.BeginForm("DeleteDepartment", "Department", FormMethod.Post, new { @id = "delete" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-outline-danger" onclick="return del(event, 'Departamento')" /> |
            @Html.ActionLink("Regresar", "GetDepartments")
        </div>
    }
</div>