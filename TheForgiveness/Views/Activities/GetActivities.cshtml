@model IEnumerable<TheForgiveness.Models.ActivitiesModel>

@{
    ViewBag.Title = "Listado De Actividades";
    Layout = "~/Views/Shared/DashBoard.cshtml";
    ViewBag.Style = "../Assets/Css/Subject/create.min.css";
}
    <script>
    $(document).ready(function () {
        $('#act').DataTable();
    });
    </script>
<h1>Listado de Actividades</h1>
<hr />
<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table" id="act">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Actividad)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>


    <tbody>
        @{
            if (ViewBag.rol == "Administrador")
            {
                foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Actividad)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-warning" })
                            @Html.ActionLink("Detalle", "SpecifyAtivities", new { id = item.ID }, new { @class = "btn btn-outline-success" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                        </td>
                    </tr>
                }
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Actividad)
                        </td>
                        <td>
                            @Html.ActionLink("Detalle", "Details", new { id = item.ID }, new { @class = "btn btn-outline-warning" })
                        </td>
                    </tr>
                }
            }
        }
    </tbody>

</table>
